<Window x:Class="dmh.DisplayAttributeTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:local="clr-namespace:dmh.DisplayAttributeTest"
		xmlns:wpg="clr-namespace:System.Windows.Controls.WpfPropertyGrid;assembly=System.Windows.Controls.WpfPropertyGrid"
        xmlns:wpgd="clr-namespace:System.Windows.Controls.WpfPropertyGrid.Design;assembly=System.Windows.Controls.WpfPropertyGrid"
        Title="MainWindow" Height="350" Width="525">
	<Window.Resources>
		<local:TestSettings x:Key="testSettings" />
	</Window.Resources>
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition />
		</Grid.RowDefinitions>
		
		<wpg:PropertyGrid Grid.Row="0" 
						  PropertyFilterVisibility="Collapsed" SelectedObject="{StaticResource ResourceKey=testSettings}" 
						PropertyDisplayMode="All" ShowAttachedProperties="True" ShowReadOnlyProperties="True">
			<wpg:PropertyGrid.Layout>
				<wpgd:CategorizedLayout/>
			</wpg:PropertyGrid.Layout>	
			

		</wpg:PropertyGrid>
		
	</Grid>
</Window>
